<div class="container">
  <br>
  Restaurant: <strong> <%= @restaurant.name.capitalize %> </strong>
  <br>
  Address: <%= @restaurant.address %>
  <br>
  Category: <%= @restaurant.category %>
  <br>
  <h2>Reviews:</h2>
  <% @restaurant.reviews.each_with_index do |r, index| %>
    <ul> <%= index+1 %>-- stars: <%= r.star %> description: <%= r.description %> <%= link_to 'delete', restaurant_review_path(@restaurant, r), class:"btn btn-primary",
    method: :delete,
    data: {confirm: "Are you sure?"}   %></ul>
  <% end %>
  <br>
  <%= link_to 'Back to restaurants', restaurants_path, class:"btn btn-primary"  %>
  <%#= link_to 'Add a review',  %>

  <%= link_to "Edit restaurant", edit_restaurant_path, class:"btn btn-primary"%>

  <%= link_to "Delete restaurant", restaurant_path(@restaurant), class:"btn btn-primary",
    method: :delete,
    data: {confirm: "Are you sure?"}   %>
  <%= link_to "Create Review", new_restaurant_review_path(@restaurant), class:"btn btn-primary"  %>
</div>
